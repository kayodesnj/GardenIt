@using GardenIt.Models.Engine;
@model List<Plant>

<h3>All Plants</h3>
<hr/>

<div class="card-deck">
    @foreach (var plant in Model) {
        <div class="card mb-4" style="min-width:20rem; max-width:20rem">
            <div class="card-body">
                <h5 class="card-title">@plant.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@plant.Type</h6>
                <p class="card-text">@plant.Notes</p>
                <p class="card-text text-muted">Water by @plant.NextWateringDate.ToString("MMM dd, yyyy")</p>
                <a asp-action="Water" asp-route-id="@plant.Id" class="card-link">Water</a>
                <a asp-action="Details" asp-route-id="@plant.Id" class="card-link">Details</a>
            </div>
        </div>
    }
</div>
<hr/>
<div>
    <a asp-action="Create">Create New</a>
</div>