@using GardenIt.Models.ViewModels
@model PlantViewModel

@{
    string pageTitle = "New Plant";
    string action = "Create";

    if (ViewBag.IsEditing == true) {
        pageTitle = "Edit Plant";
        action = "Edit";
    }
}

<div>
    <h2>@pageTitle</h2>
    <hr/>
    <div>
        <form asp-action="@action">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name"/>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Type</label>
                <input type="text" class="form-control" asp-for="Type"/>
                <span class="text-danger" asp-validation-for="Type"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaysBetweenWatering">Days Between Watering</label>
                <input type="number" class="form-control" asp-for="DaysBetweenWatering"/>
                <span class="text-danger" asp-validation-for="DaysBetweenWatering"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes">Notes</label>
                <textarea class="form-control" asp-for="Notes" rows="4" cols="50"></textarea>
                <span class="text-danger" asp-validation-for="Notes"></span>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
